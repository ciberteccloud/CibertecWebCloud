<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tibox.Angular App</title>
    @Styles.Render("~/bundles/site")        
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/required")            
    @Scripts.Render("~/bundles/angular")
</head>
<body ng-controller="applicationController as vm" ng-init="init('@System.Configuration.ConfigurationManager.AppSettings["WebApiUrl"]')">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
                <a class="navbar-brand" ui-sref="home" ui-sref-active="active">Home</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li><a ng-if="!vm.validate()" ui-sref="login" ui-sref-active="active">Ingresar</a></li>                    
                    <li><a ng-if="vm.validate()" ng-click="vm.logout()" href="#" ui-sref-active="active">Salir</a></li>                    
                    <li><a ui-sref="product" ui-sref-active="active">Productos</a></li>                    
                </ul>
            </div>
        </div>
    </div>    
    <section>
        <div class="container body-content">
            @RenderBody()
        </div>
    </section>
    <footer>
        &copy; Todos los derechos reservados a Cibertec DAT
    </footer>               
    @Scripts.Render("~/bundles/dependencies")
    @Scripts.Render("~/bundles/app")
</body>
</html>